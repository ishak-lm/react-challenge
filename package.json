{
  "name": "react-challenge",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "run:dev": "react-scripts start",
    "run:test": "react-scripts test",
    "run:linter": "eslint src/**/*.js",
    "fix:linter": "eslint src/**/*.js --fix",
    "test:husky": "CI=true yarn test && yarn run:linter",
    "run:storybook": "start-storybook -p 9009 -s public",
    "build:storybook": "build-storybook -s public"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "prettier": "^1.19.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run:linter",
      "pre-push": "yarn test:husky"
    }
  }
}
